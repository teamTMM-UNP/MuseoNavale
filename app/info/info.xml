<Page
        loaded="pageLoaded"
        class="page"
        xmlns="http://www.nativescript.org/tns.xsd"
        actionBarHidden="true"
        backgroundColor="#D9BB84">

    <ScrollView>
        <StackLayout orientation="vertical">
            <Image src="~/images/logo.png" horizontalAlignment="center" margin="20 20 20 20"></Image>
            <StackLayout orientation="horizontal" horizontalAlignment="center" marginTop="5">
                <Label text="{{ _L('info_versione') }}" marginRight="10" color="white"></Label>
                <Label text="{{version}}" color="white"></Label>
            </StackLayout>
            <Label textAlignment="center" textWrap="true" text="https://museonavale.uniparthenope.it" marginTop="5" color="blue" tap="meteo_web"></Label>
            <Label textAlignment="center" textWrap="true" color="white" text="{{ _L('info_dipartimento') }}" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" color="white" text="{{ _L('info_manager') }}" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" color="white" text="Team leader: Prof. Raffaele Montella" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" color="white" text="{{ _L('info_sviluppatori') }}" marginTop="10"></Label>
            <Label textAlignment="center" textWrap="true" color="white" text="{{ _L('info_logo') }}" marginTop="10"></Label>
            <Button textWrap="true" text="Copyright Â©" ontap="onTapCopy" margin="10 5 0 5"></Button>
            <Button textWrap="true" text="Disclaimer" ontap="onTapDisclaimer" margin="10 5 10 5"></Button>
        </StackLayout>
    </ScrollView>
</Page>
